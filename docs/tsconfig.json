{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": [
    "astro/tsconfigs/strict",
    "../tsconfig.json"
  ],
  "compilerOptions": {
    "paths": {
      "package:/components": [
        "./src/components"
      ],
      "@components/*": [
        "../packages/components/*"
      ]
    },
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "jsx": "preserve",
    "types": ["vite/client"]
  }
}
