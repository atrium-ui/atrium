---
import { Tabs, TabItem, Code } from "@astrojs/starlight/components";

const props = Astro.props;
---

<div class="terminal-command">
  <Tabs syncKey="packageManagerCommand">
    <TabItem label="pnpm" icon="pnpm">
      <Code code={props.pnpm} lang="sh" />
    </TabItem>
    <TabItem label="npm" icon="seti:npm">
      <Code code={props.npm} lang="sh" />
    </TabItem>
    <TabItem label="bun" icon="bun">
      <Code code={props.bun} lang="sh" />
    </TabItem>
  </Tabs>
</div>

<style is:global>
  .terminal-command .not-content {
    padding: 0;
    border: none;
    min-height: 0;
  }
</style>
