---
import { Tabs, TabItem } from "@astrojs/starlight/components";
import { Code } from "astro:components";

const props = Astro.props;
---

<div class="terminal-command">
  <Tabs syncKey="packageManagerCommand">
    <TabItem label="pnpm" icon="pnpm">
      <Code lang="sh" code={props.pnpm}></Code>
    </TabItem>
    <TabItem label="npm" icon="seti:npm">
      <Code lang="sh" code={props.npm}></Code>
    </TabItem>
    <TabItem label="bun" icon="bun">
      <Code lang="sh" code={props.bun}></Code>
    </TabItem>
  </Tabs>
</div>

<style is:global>
  .terminal-command .not-content {
    padding: 0;
    border: none;
    min-height: 0;
  }
</style>
