---
import { Example, Pills, Git, Accessibility } from "package:/components";
import { Code } from "@astrojs/starlight/components";

export interface Props {
	name: string;
}

const props = Astro.props;
---

<Pills>
  <Git href={`/packages/components/src/vue/${props.name}.tsx`} />
  <Accessibility reportId={`-atrium-components-${props.name.toLowerCase()}-`} />

  <slot name="pills" />
</Pills>

<slot />

<Code code={`npx @sv/components ${props.name.toLowerCase()}`} lang="sh" />
