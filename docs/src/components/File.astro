---
import fs from "node:fs";
import shiki from 'shiki';

export interface Props {
  file: string;
}

const props = Astro.props;

const langs = {
  "ts": "typescript",
  "tsx": "typescript",
  "js": "javascript",
  "jsx": "javascript",
  "json": "json",
  "yaml": "yaml",
  "yml": "yaml",
  "md": "markdown",
  "html": "html",
  "css": "css",
  "scss": "scss",
  "sass": "sass",
  "editorconfig": "ini",
}

const file = fs.readFileSync(props.file, "utf-8");
const content = await shiki.getHighlighter({
	theme: 'nord'
}).then(highlighter => highlighter.codeToHtml(file, { lang: langs[props.file.split(".").pop()] || undefined }));
---

<div set:html={content}></div>
