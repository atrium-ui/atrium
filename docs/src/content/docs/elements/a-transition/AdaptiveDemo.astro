---
import { Button } from "@components/src/vue/Button";
---

<div class="w-full flex justify-center demo-button">
  <Button client:only="vue" class="overflow-hidden">
    <a-transition class="overflow-visible">
      <div class="inner-demo-button">
        <span>Click me</span>
      </div>
    </a-transition>
  </Button>
</div>

<style is:global>
  .inner-demo-button {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 0.5rem;
    width: 100%;
    white-space: nowrap;
  }

  .loading-indicator {
    flex: none;
    display: inline-block;
    width: 1rem;
    height: 1rem;
    border-radius: 100%;
    border: 2px solid currentColor;
    border-bottom-color: transparent;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  hr {
    margin: 2rem 0;
    border-bottom: 1px solid #5c5c5c;
  }
</style>

<hr />

<a-transition class="overflow-hidden">
  <div class="content"></div>
</a-transition>

<hr />

<script>
  import { paragraph } from "txtgen";
  import "@sv/elements/transition";

  const indicator = document.createElement("div");
  indicator.classList.add("loading-indicator");

  let timeout: NodeJS.Timeout;

  const gen = () => {
    const text = paragraph(1 + Math.random() * 4);
    const content = document.querySelector(".content");
    if (content) content.innerHTML = text;
  };
  gen();

  const button = document.querySelector(".demo-button");
  if (button)
    button.addEventListener("click", () => {
      clearTimeout(timeout);
      button.querySelector(".inner-demo-button")?.appendChild(indicator);
      timeout = setTimeout(() => {
        gen();

        indicator.remove();
      }, 800);
    });
</script>
