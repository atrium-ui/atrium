{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "useDefineForClassFields": false,
    "experimentalDecorators": true,
    "plugins": [
      {
        "name": "ts-lit-plugin"
      }
    ]
  },
  "exclude": [
    "node_modules",
    "**/dist",
    "**/*.spec.ts"
  ]
}
