{
	"compilerOptions": {
		"target": "ES2018",
		"module": "ESNext",
		"strict": true,
		"importHelpers": true,
		"allowJs": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"baseUrl": ".",
		"lib": ["esnext", "dom", "dom.iterable", "scripthost", "webworker"]
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
