{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2020",
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "jsx": "preserve"
  },
  "exclude": ["node_modules", "dist"]
}
