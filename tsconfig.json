{
	"compilerOptions": {
		"target": "ES2018",
		"module": "ES2020",
		"lib": [
			"DOM",
			"DOM.Iterable"
		],
		"strict": true,
		"resolveJsonModule": true,
		"moduleResolution": "Bundler",
		"noImplicitAny": false,
		"experimentalDecorators": true,
		"useDefineForClassFields": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"checkJs": false,
		"skipLibCheck": true,
		"noEmit": true,
		"jsx": "preserve",
		"types": [
			"bun-types",
			"web"
		]
	}
}
