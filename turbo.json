{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "cache": true,
      "outputs": [
        "dist"
      ],
      "outputMode": "errors-only"
    },
    "dev": {
      "cache": false
    },
    "test": {
      "cache": true
    },
    "check": {
      "cache": false
    },
    "publish-package": {
      "cache": false
    }
  }
}
