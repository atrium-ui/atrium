{
  "$schema": "http://json.schemastore.org/prettierrc",
  "semi": true,
  "trailingComma": "all",
  "singleQuote": false,
  "printWidth": 90,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": ["*.json"],
      "options": {
        "printWidth": 30
      }
    },
    {
      "files": ["*.css"],
      "options": {
        "printWidth": 80
      }
    }
  ]
}
