{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  },
  "linter": {
    "rules": {
      "complexity": {
        "noStaticOnlyClass": "warn",
        "noForEach": "warn"
      },
      "a11y": {
        "useKeyWithClickEvents": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noExplicitAny": "warn",
        "noConsole": {
          "level": "error",
          "options": {
            "allow": ["log"]
          }
        }
      },
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "warn",
          "options": {
            "attributes": [
              "classList"
            ],
            "functions": [
              "clsx",
              "cva",
              "twMerge",
              "tw"
            ]
          }
        }
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "lineWidth": 90,
    "indentStyle": "space",
    "formatWithErrors": true,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all",
      "quoteProperties": "asNeeded",
      "jsxQuoteStyle": "double"
    }
  },
  "css": {
    "formatter": {
      "lineWidth": 90,
      "quoteStyle": "double",
      "indentStyle": "space",
      "indentWidth": 2
    }
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    },
    "formatter": {
      "trailingCommas": "none",
      "lineWidth": 30
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!**/package.json",
      "!**/.mise",
      "!**/.astro",
      "!**/.nuxt",
      "!**/.output",
      "!**/vendor",
      "!**/public",
      "!**/dist"
    ]
  }
}
