{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignoreUnknown": true,
		"ignore": [
			".mise",
			"public",
			"**/dist",
			"**/.astro"
		]
	},
	"organizeImports": {
		"enabled": false
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 2,
		"lineWidth": 100,
		"indentStyle": "tab",
		"formatWithErrors": true
	},
	"linter": {
		"rules": {
			"recommended": true,
			"a11y": {
				"useKeyWithClickEvents": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingComma": "es5",
			"quoteProperties": "asNeeded",
			"jsxQuoteStyle": "double"
		}
	},
	"json": {
		"formatter": {
			"lineWidth": 30
		}
	}
}
